<% layout("../layouts/boilerplate.ejs") -%>

<div class="container my-5">
  <h2 class="mb-4 fw-semibold">My Trips</h2>

  <% if (!bookings || bookings.length === 0) { %>
    <p class="text-muted">You haven’t booked any trips yet.</p>
    <a href="/listings" class="btn btn-outline-dark mt-3">
      Explore listings
    </a>
  <% } else { %>

    <div class="row g-4">
      <% bookings.forEach(booking => { %>

        <div class="col-md-6 col-lg-4">
          <div class="card shadow-sm h-100">

            <img
              src="<%= booking.listing.image.url %>"
              class="card-img-top"
              style="height: 200px; object-fit: cover;"
            >

            <div class="card-body">
              <h5 class="card-title">
                <%= booking.listing.title %>
              </h5>

              <p class="text-muted mb-2">
                <%= new Date(booking.checkIn).toDateString() %>
                →
                <%= new Date(booking.checkOut).toDateString() %>
              </p>

              <p class="mb-2">
                <strong>Total:</strong>
                ₹<%= booking.totalPrice.toLocaleString("en-IN") %>
              </p>

              <p>
                Status:
                <% if (booking.status === "confirmed") { %>
                  <span class="badge bg-success">Confirmed</span>
                <% } else { %>
                  <span class="badge bg-secondary">Cancelled</span>
                <% } %>
              </p>

              <% if (booking.status === "confirmed") { %>
                <form
                  action="/bookings/<%= booking._id %>/cancel?_method=PUT"
                  method="POST"
                >
                  <button class="btn btn-outline-danger btn-sm">
                    Cancel booking
                  </button>
                </form>
              <% } %>

            </div>
          </div>
        </div>

      <% }) %>
    </div>

  <% } %>
</div>
